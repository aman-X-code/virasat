# Cloudinary Configuration
# Get these values from your Cloudinary dashboard: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloud_name_here
CLOUDINARY_API_KEY=your_api_key_here
CLOUDINARY_API_SECRET=your_api_secret_here

# Environment folder for Cloudinary uploads (dev/prod)
CLOUDINARY_FOLDER=prod

# Next.js Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# PayU Biz Configuration
# For Test Mode: Use test credentials from PayU Biz dashboard
# For Production: Use live credentials from PayU Biz dashboard
PAYUBIZ_MERCHANT_KEY=your_payubiz_merchant_key
PAYUBIZ_MERCHANT_SALT=your_payubiz_merchant_salt

# Application URL (CRITICAL: Must be your actual domain in production)
NEXT_PUBLIC_APP_URL=https://yourdomain.com

# Application URL
NEXT_PUBLIC_APP_URL=your_url


# Email Configuration
# For Gmail (demo/testing)
EMAIL_SERVICE=gmail
EMAIL_USER=your_gmail
EMAIL_APP_PASSWORD=16_character_pass_from_gmail

# For Custom SMTP (name.com or other providers)
# EMAIL_SERVICE=smtp
# EMAIL_HOST=mail.reachvirasat.org
# EMAIL_PORT=587
# EMAIL_SECURE=false
# EMAIL_USER=noreply@reachvirasat.org
# EMAIL_PASSWORD=your_email_password
# ADMIN_EMAIL=admin@reachvirasat.org